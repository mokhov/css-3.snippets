	background: -webkit-linear-gradient(top, $1, $2);
	background:    -moz-linear-gradient(top, $1, $2);
	background:     -ms-linear-gradient(top, $1, $2);
	background:      -o-linear-gradient(top, $1, $2);
	background:         linear-gradient(to bottom, $1, $2);${4} 
